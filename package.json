{
  "name": "rehype-raw",
  "version": "4.0.2",
  "description": "rehype plugin to reparse the tree (and raw nodes)",
  "license": "MIT",
  "keywords": [
    "unified",
    "rehype",
    "rehype-plugin",
    "plugin",
    "raw",
    "html"
  ],
  "repository": "rehypejs/rehype-raw",
  "bugs": "https://github.com/rehypejs/rehype-raw/issues",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/unified"
  },
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "types": "types/index.d.ts",
  "files": [
    "index.js",
    "types/index.d.ts"
  ],
  "dependencies": {
    "hast-util-raw": "^5.0.0"
  },
  "devDependencies": {
    "browserify": "^16.0.0",
    "nyc": "^15.0.0",
    "prettier": "^2.0.0",
    "rehype-stringify": "^8.0.0",
    "remark-cli": "^8.0.0",
    "remark-parse": "^8.0.0",
    "remark-preset-wooorm": "^7.0.0",
    "remark-rehype": "^7.0.0",
    "tape": "^5.0.0",
    "tinyify": "^2.0.0",
    "unified": "^9.0.0",
    "xo": "^0.32.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier . --write && xo --fix",
    "build-bundle": "browserify . -s rehypeRaw > rehype-raw.js",
    "build-mangle": "browserify . -s rehypeRaw -p tinyify > rehype-raw.min.js",
    "build": "npm run build-bundle && npm run build-mangle",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run format && npm run build && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "ignores": [
      "rehype-raw.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
